---
import { SocialInstagram, SocialEmail, SocialWhatsapp } from '@Assets';
---

<div class="social-container">
  <a
    class="link"
    href="https://www.instagram.com/renanrefrigeracaooficial/"
    target="_blank"
    rel="noopener"
    >
      <img src={SocialInstagram} alt="Ícone do Instagram" title="Instagram" class="icon">
    </a
  >
  <a
    class="link"
    href="https://wa.me/message/CVQIECXMWBIPN1"
    target="_blank"
    rel="noopener"
    >
      <img src={SocialWhatsapp} alt="Ícone do Whatsapp" title="WhatsApp" class="icon">
    </a
  >
  <a
    class="link"
    href="mailto:contato@renanrefrigeracao.com.br"
    target="_blank"
    rel="noopener"
    >
      <img src={SocialEmail} alt="Ícone do Email" title="Email" class="icon">
    </a
  >
</div>

<style>
  .social-container {
    @apply
    min-w-fit
    flex
    flex-wrap
    gap-[20px]
  }

  .link {
    @apply w-16;
  }

  .icon {
    @apply
    max-w-[50px]
  }

</style>
