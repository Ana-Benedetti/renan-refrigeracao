---
import { BaseText, BaseTextTypes, BaseLink } from '@BaseComponents';
import { Whatsapp } from '@Assets';
import { SectionsLayout } from '@Layouts';
---

<SectionsLayout
  class="contact-section"
  id="contato"
>
  <BaseText
    class="is-blue text-center"
    tag={BaseTextTypes.TAGS.H6}
  >
    E aí, pronto para fazer seu orçamento?
  </BaseText>

  <BaseLink
    href="https://wa.me/message/CVQIECXMWBIPN1"
    variation="blue"
  >
    <img
      class="whatsapp"
      src={Whatsapp}
      alt="Whatsapp"
      title=""
    />
    Iniciar Orçamento
  </BaseLink>
</SectionsLayout>

<style>
  .contact-section {
    @apply flex
    flex-col
    items-center
    gap-16;
  }

  .whatsapp {
    @apply w-7;
  }
</style>
