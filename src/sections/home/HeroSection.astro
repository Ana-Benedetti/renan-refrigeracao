---
import { BaseLink, BaseText, BaseTextTypes } from '@BaseComponents';
import { Whatsapp, HeroBG } from '@Assets';
import { SectionsLayout } from '@Layouts';
---

<SectionsLayout class="section-hero">
  <div class="hero-container">
    <BaseText tag={BaseTextTypes.TAGS.H1}>
      Refrigeração e Climatização de qualidade é com a gente!
    </BaseText>
    <div class="hero-p">
      <BaseText tag={BaseTextTypes.TAGS.SPAN}>
        Atendimento profisisonal especializado em Refrigeração e Climatização,
        soluções inteligentes para sua empresa e o conforto da sua família.
      </BaseText>
    </div>

    <div class="hero-btn-container">
      <BaseLink
        href="#clientes"
        variation="blue"
      >
        <img
          class="whatsapp"
          src={Whatsapp}
          alt="Ícone do Whatsapp"
        />Entre em contato
      </BaseLink>

      <BaseLink
        href="https://wa.me/message/CVQIECXMWBIPN1"
        target="_blank"
        variation="white"
        class="hero-white-button"
      >Saiba Mais
      </BaseLink>
    </div>
  </div>

  <div class="empty-space"></div>

  <div class="hero-bg-container">
    <img
      src={HeroBG}
      class="hero-bg"
      alt="Whatsapp"
      title=""
    />
  </div>
</SectionsLayout>

<style>
  .section-hero {
    @apply flex 
    h-screen 
    justify-center
    items-center 
    min-h-[700px];
  }

  .hero-container {
    @apply flex 
    flex-col 
    gap-8
    h-screen 
    text-center
    justify-center
    items-center
    min-h-[700px] 
    max-w-4xl
    p-6
    z-10;
  }

  .hero-btn-container {
    @apply flex gap-8 flex-wrap justify-center;
  }

  .hero-p {
    @apply max-w-xl;
  }

  .hero-white-button {
    @apply min-w-[195px];
  }

  .empty-space {
    @apply hidden p-48;
  }

  .hero-bg {
    @apply absolute w-screen h-screen top-0 left-0 z-0 overflow-hidden object-cover;
  }

  .hero-bg {
    @apply absolute w-screen h-screen top-0 left-0 z-0 overflow-hidden object-cover;
  }

  .whatsapp {
    @apply w-7;
  }

  @media (min-width: 600px) {
    .hero-container {
      @apply gap-16;
    }
  }

  @media (min-width: 1024px) {
    .hero-container {
      @apply text-left items-start;
    }

    .empty-space {
      @apply flex;
    }
  }
</style>
