---
import DependenciesLayout from './DependenciesLayout.astro';
import { TheFooter, TheNavBar, TheGTag } from '@UniqueComponents';
import ScriptsLayout from './ScriptsLayout.astro';

export interface Props {
  title: string;
  lang: string;
  description: string;
}

const { title, description } = Astro.props;

const props = {
  title:
    title ?? 'Renan Refrigeração | Serviços de Refrigeração e Climatização',
  description:
    description ??
    'Procurando por montagem e manutenção de câmara fria, freezer, expositor, geladeira ou outros serviços de refrigeração? Solicite um orçamento agora mesmo!',
};
---

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <ScriptsLayout />
    <meta
      http-equiv="Content-Type"
      content="text/html; charset=utf-8"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="title"
      content={props.title}
    />
    <meta
      name="description"
      content={props.description}
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <link
      rel="sitemap"
      href="/sitemap-index.xml"
    />
    <title>{props.title}</title>

    <!-- Open Graph / Facebook -->
    <meta
      property="og:type"
      content="website"
    />
    <meta
      property="og:url"
      content="https://renanrefrigeracao.com.br"
    />
    <meta
      property="og:title"
      content={props.title}
    />
    <meta
      property="og:description"
      content={props.description}
    />
    <meta
      property="og:image"
      content="https://renanrefrigeracao.com.br/renan-refrigeracao-share-thumb.png"
    />

    <!-- Twitter -->
    <meta
      property="twitter:card"
      content="summary_large_image"
    />
    <meta
      property="twitter:url"
      content="https://renanrefrigeracao.com.br"
    />
    <meta
      property="twitter:title"
      content="Renan Refrigeração | Serviços de Refrigeração e Climatização"
    />
    <meta
      property="twitter:description"
      content={props.description}
    />
    <meta
      property="twitter:image"
      content="https://renanrefrigeracao.com.br/renan-refrigeracao-share-thumb.png"
    />
  </head>

  <body class="body">
    <TheGTag />

    <DependenciesLayout>
      <TheNavBar />
      <main class="main">
        <slot />
      </main>
      <TheFooter />
    </DependenciesLayout>
  </body>
</html>

<style>
  body {
    @apply flex min-h-screen flex-col items-center;
  }

  main { @apply w-screen }
</style>
