{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@Assets": ["src/assets"],
      "@Layouts": ["src/layouts"],
      "@Sections": ["src/sections"],

      "@BaseComponents": ["src/components/base"],
      "@ComposedComponents": ["src/components/composed"],
      "@UniqueComponents": ["src/components/unique"]
    }
  }
}
